    <name>App para Restaurantes</name>
    <description>Demo de apps para restaurantes</description>
    <author email="laspalmas@disertel.com" href="https://disertel.com/">Disertel Apps</author>
	
	<preference name="phonegap-version" value="cli-7.1.0" />
